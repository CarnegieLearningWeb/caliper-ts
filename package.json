{
	"name": "@imaginelearning/caliper-ts",
	"version": "1.0.0",
	"description": "Reference implementation of the Caliper Sensor API written in TypeScript",
	"author": "Imagine Learning",
	"license": "MIT",
	"repository": "git@github.com:ImagineLearning/caliper-ts.git",
	"main": "dist/index.js",
	"module": "dist/caliper-ts.esm.js",
	"typings": "dist/index.d.ts",
	"files": [
		"dist",
		"src"
	],
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"start": "tsdx watch",
		"build": "tsdx build",
		"test": "tsdx test --watch",
		"test:ci": "cross-env CI=true tsdx test --coverage",
		"test:coverage": "tsdx test --coverage",
		"lint": "eslint src/**/*.ts",
		"format": "prettier --write **/*.{js,json,ts}"
	},
	"peerDependencies": {
		"jsonschema": ">=1.4",
		"uuid": ">=8"
	},
	"devDependencies": {
		"@imaginelearning/eslint-config": "^0.1.1",
		"@imaginelearning/prettier-config": "^0.1.1",
		"@types/jsonschema": "^1.1.1",
		"@types/lodash": "^4.14.161",
		"@types/text-encoding": "^0.0.35",
		"@types/uuid": "^8.3.0",
		"@typescript-eslint/eslint-plugin": "^4.16.1",
		"@typescript-eslint/parser": "^4.16.1",
		"babel-eslint": "^10.1.0",
		"cross-env": "^7.0.2",
		"eslint": "^7.21.0",
		"eslint-config-airbnb": "^18.2.1",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-prettier": "^3.3.1",
		"husky": "^4.2.0",
		"jest-diff": "^26.4.2",
		"jest-fetch-mock": "^3.0.3",
		"jest-teamcity-reporter": "^0.9.0",
		"jsonschema": "^1.4.0",
		"lint-staged": "^10.5.4",
		"lodash": "^4.17.20",
		"lodash-es": "^4.17.15",
		"prettier": "^2.2.1",
		"pretty-quick": "^3.1.0",
		"text-encoding": "^0.7.0",
		"tsdx": "^0.14.1",
		"tslib": "^2.1.0",
		"typescript": "^4.2.3",
		"uuid": "^8.3.0"
	},
	"dependencies": {
		"date-fns": "^2.16.1",
		"ky": "^0.23.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged -p false"
		}
	},
	"lint-staged": {
		"*.(js|json|ts)": "pretty-quick --staged",
		"*.(js|ts)": "eslint"
	}
}
